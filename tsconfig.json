{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false, // throws a ton of errors
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false, // change this back to true
    "target": "esnext",
    "noImplicitAny": false, // change this back to true
    "strictNullChecks": false, // change this back to true
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "src/**/*.test.ts"
  ]
}

